// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Fish {
  id        Int        @id @default(autoincrement())
  name      String
  type      String
  ip        String?    // optional IP to bind for this fish (e.g. "0.0.0.0")
  port      Int?       // optional port to bind for this fish
  alerts    Alert[]
  status    FishStatus @default(running)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("fish")
}

model Alert {
  id          Int       @id @default(autoincrement())
  title       String
  message     String?
  level       AlertLevel @default(info)
  type        String?
  source      String?
  imgFile     String?
  lat         Float?
  lon         Float?
  fishId      Int?
  fish        Fish?     @relation(fields: [fishId], references: [id], onDelete: SetNull)
  status      AlertStatus @default(active)
  createdAt   DateTime   @default(now())
  

  @@map("alerts")
}

enum FishStatus {
  running
  stopped
}

enum AlertLevel {
  info
  warning
  error
  critical
}

enum AlertStatus {
  active
  resolved
  acknowledged
}
